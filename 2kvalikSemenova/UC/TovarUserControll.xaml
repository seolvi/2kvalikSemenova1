<UserControl x:Class="_2kvalikSemenova.UC.TovarUserControll"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_2kvalikSemenova.UC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Black" BorderThickness="1" Margin="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="89*"/>
                <RowDefinition Height="11*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="41*"/>
                <ColumnDefinition Width="76*"/>
            </Grid.ColumnDefinitions>
            <Image Name="SuitImage" VerticalAlignment="Center" HorizontalAlignment="Center"></Image>
            <StackPanel Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock Name="SuitNameText"></TextBlock>
                <TextBlock Name="SuitPriceText"></TextBlock>
                <TextBlock Name="SuitTypeText"></TextBlock>
                <TextBlock Name="SuitLastEditDateText"></TextBlock>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Name="EditButton" Click="EditButton_Click">Изменить запись</Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
