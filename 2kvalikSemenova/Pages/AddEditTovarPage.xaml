<Page x:Class="_2kvalikSemenova.Pages.AddEditTovarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_2kvalikSemenova.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditTovarPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5" Width="266">
                <TextBlock  Margin="0 0 10 0">Фото :</TextBlock>
                <Button x:Name="EditImaeButton"  Margin="0 0 0 10" Width="100" Height="100" Click="EditImaeButton_Click">
                    <Image x:Name="SuitImage" />
                </Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="3">
                <TextBlock  Margin="0 0 5 0">Наименование:</TextBlock>
                <TextBox Name="SuitNameTb" Width="200"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="3">
                <TextBlock Width="85">Цена:</TextBlock>
                <TextBox Name="SuitPriceTb" Width="200" PreviewTextInput="FeedPriceTb_PreviewTextInput"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="3">
                <TextBlock Width="84">Тип:</TextBlock>
                <ComboBox Name="SuitTypeComboBox" Width="200"></ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="3">
                <Button Name="SaveButton" Click="SaveButton_Click">Сохранить</Button>
                <Button Name="ExitButton" Margin="10 0 0 0" Click="ExitButton_Click">Выйти</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

