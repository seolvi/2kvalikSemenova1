<Page x:Class="_2kvalikSemenova.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_2kvalikSemenova.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Text="Авторизация" FontSize="24" FontWeight="Bold" 
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="323,101,0,0" Grid.ColumnSpan="2"/>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0">
            <TextBlock Width="171" Height="50" Text="Логин" FontSize="21" TextAlignment="Center" RenderTransformOrigin="0.411,0.541"/>
            <TextBlock Width="191" Height="50" Text="Пароль" FontSize="21" TextAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1">
            <TextBox x:Name="LoginTb" Height="30" Width="273" VerticalContentAlignment="Center" FontSize="20"/>
            <PasswordBox x:Name="PassordPb" Height="30" Width="272" VerticalContentAlignment="Center" FontSize="20" Margin="0,20,0,0"/>
        </StackPanel>
        <StackPanel Grid.ColumnSpan="2" VerticalAlignment="Center" Grid.Column="0" Margin="0,300,0,0" Orientation="Horizontal" HorizontalAlignment="Center">

            <Button x:Name="EnterBtn" Width="200" Height="30" Content="Войти" Margin="30" Click="EnterBtn_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
